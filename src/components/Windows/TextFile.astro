---
  interface IFileData {
    title: string;
    subtitle: string;
    content: string;
    link?: string;
  }

  interface Props {
    data: IFileData;
  }

  const { data } = Astro.props;
---

<div class="textfile-window-styled">
  <div class="textfile-content">
    <h2 class="textfile-title">{data.title}</h2>
    <p class="textfile-subtitle">{data.subtitle}</p>
    <div class="textfile-content">
      <Fragment set:html={data.content} />
    </div>
    {data.link &&
      <p class="textfile-link">
        <a href={data.link} target="_blank">View link</a>
      </p>
    }
  </div>
</div>

<style>
  .textfile-window-styled {
    width: 525px;
    padding: 40px;

    .textfile-content {
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;

      width: 100%;

      h2, p, a, code {
        font-family: "IBM Plex Mono", serif !important;
        font-size: 16px;
        font-weight: 300;
      }

      code {
        padding: 2px 4px;
        border: 1px solid #E4E4E4;
        border-radius: .25rem;
        background: #E4E4E444;
      }

      .textfile-title { font-size: 1.5rem; font-weight: 700; }
      .textfile-subtitle { margin-top: -1.5rem; font-size: 14px; }
      .textfile-link a {
        color: #000;
        font-weight: 400;
      }
    }
  }
</style>