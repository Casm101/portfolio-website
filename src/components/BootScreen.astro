---
import Picture from "astro/components/Picture.astro";
import ProgressBar from "./ProgressBar.astro";

import BootLogo from '../assets/boot-logo-01.webp';
---

<div class="boot-screen-styled">
  <div class="logo">
    <Picture src={BootLogo} alt="Boot logo">
  </div>
  <ProgressBar />
</div>

<style>
  .boot-screen-styled {
    position: absolute;
    inset: 0;

    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 5rem;

    opacity: 1;
    pointer-events: all;
    transition: opacity 1.5s;
    
    backdrop-filter: blur(40px) saturate(3);
    background: #00000011;
    z-index: 2000;

    .logo {
      height: 103px;
      width: 84px;

      img {
        height: 100%;
        width: 100%;
      }
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      const bootScreen = document.querySelector('.boot-screen-styled') as HTMLElement;
      if (bootScreen) {
        bootScreen.style.opacity = '0';
        bootScreen.style.pointerEvents = 'none';
      }
    }, 4750);
  });
</script>